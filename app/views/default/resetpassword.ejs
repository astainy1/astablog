<!-- Reset Password form -->
<form action="/login" method="post" class="reset-password-form" name="resetPassword">
  <h3>New Password</h3>

  <section class="input-container">
    <section class="form-control">
      <label for="reset-password">Password</label>
      <input
        type="password"
        name="password"
        id="reset-password"
        placeholder="Enter Password"
      />
    </section>
    <section class="form-control">
      <label for="reset-password2">Repeat Password</label>
      <input
        type="password"
        name="confirm_password"
        id="reset-password2"
        placeholder="Repeat Password"
      />
    </section>
    <section class="form-control">
      <input type="submit" id="resetpassword-submit-btn" value="Reset" />
    </section>
  </section>
</form>
<!-- Reset Password form ends -->
</section>

